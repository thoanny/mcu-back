{% extends 'base.html.twig' %}

{% block body %}
    <h1>Episodes</h1>

    {% if episodes %}
        <table border="1" cellpadding="5" cellspacing="0">
            <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Duration</th>
                <th>Number</th>
                <th>Show</th>
                <th>Edit</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Delete</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for episode in episodes %}
                <tr>
                    <td>{{ episode.id }}</td>
                    <td>{{ episode.title }}</td>
                    <td>{{ episode.duration }}</td>
                    <td>{{ episode.number }}</td>
                    <td>{{ episode.product.title }}</td>
                    <td><a href="{{ path('app_admin_show_edit', {id: episode.product.id}) }}">Edit</a></td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td><a href="{{ path('app_admin_episode_delete', {id: episode.id}) }}" onclick="return confirm('Are you sure?')">Delete</a></td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No episode.</p>
    {% endif %}
{% endblock %}

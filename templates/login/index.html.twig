{% extends 'base.html.twig' %}

{% block body %}

    <div class="max-w-md mx-auto">
        <div class="flex items-center gap-2 justify-between mb-6">
            <h1 class="text-4xl font-semibold">Login</h1>
        </div>

        {% if error %}
            <div class="alert alert-error mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            </div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <div class="form-control">
                <label for="username" class="label label-text">Email address:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="input input-bordered">
            </div>
            <div class="form-control">
                <label for="password" class="label label-text">Password:</label>
                <input type="password" id="password" name="_password" class="input input-bordered">
            </div>
            <div class="form-control mt-4">
                <input type="hidden" name="_target_path" value="{{ path('app_home') }}">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-primary">login</button>
            </div>
        </form>
    </div>
{% endblock %}